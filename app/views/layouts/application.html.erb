<!DOCTYPE html>
<html>
<head>
  <title>Ideas</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>

  <script type="text/javascript" src="~/ideas/app/assets/javascripts/users.js"></script>
</head>
<body>
    <% if current_user %>
    <div class="nav_bar">
        <table>
            <tbody>
                <td>
                    <a href="/sessions/<%=current_user.id%>" data-method="delete">Log Out</a>
                </td>
                <td>
                    <a href="/ideas">All Ideas</a>
                </td>
                <td>
                    <a href="/users/<%=current_user.id%>">My Ideas</a>
                </td>
            </tbody>
        </table>
    </div>
    <% end %>
<%= yield %>

</body>
</html>
